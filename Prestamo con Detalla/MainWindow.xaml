<Window x:Class="Prestamo_con_Detalla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prestamo_con_Detalla"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Registro Moras y Prestamos" FontWeight="Bold" Height="60" FontSize="36" HorizontalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0"/>
            <Button Click="Button_Click">Registrar Moras</Button>
            <StackPanel Orientation="Horizontal"/>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0"/>
                <Button Click="Button_Clickitem">Registrar Prestamos</Button>
                <StackPanel Orientation="Horizontal"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
